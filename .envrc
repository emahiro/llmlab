# direnvによって読み込まれる環境変数設定
# .envファイルから変数を読み込みます

# ファイルが存在する場合のみ読み込み
if [ -f .env ]; then
  # .envファイルの各行を環境変数として設定
  while IFS= read -r line || [ -n "$line" ]; do
    # コメント行や空行をスキップ
    if [[ ! "$line" =~ ^# ]] && [ -n "$line" ]; then
      export "$line"
    fi
  done < .env
fi

# プロジェクト固有の設定
# Path設定
PATH_add bin

echo "環境変数を読み込みました"
